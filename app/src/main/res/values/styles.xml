<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>
    
    <style name="CustomTitleFontStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:capitalize">characters</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">@dimen/dimenTextTitle</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="CustomQuestionFontStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">@dimen/dimenTextNormal</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:layout_marginBottom">@dimen/dimenExtraSmall</item>
        <item name="android:layout_marginTop">@dimen/dimenExtraSmall</item>
    </style>

    <style name="CustomLayout">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="CustomSet">
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">@dimen/dimenLarge</item>
        <item name="android:layout_marginTop">@dimen/dimenLarge</item>
    </style>

    <style name="CustomButton">
        <item name="android:textColor">@color/colorButtonText</item>
    </style>

</resources>
